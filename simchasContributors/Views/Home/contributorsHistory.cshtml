@using simchasContributorsData
@{
    ViewBag.Title = "contributorsHistory";
}

<h2>History of @Model.person.firstName @Model.person.lastName</h2>


<table class="table table-hover table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>Action</th>
            <th>Date</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (DepositClass d in Model.deposit)
        {
            <tr>
                <td>@(@d.name == "Deposit" ? "" : "Contribution to the" ) <strong> @d.name </strong> @(@d.name == "Deposit" ? "" : "simcha" )</td>
                <td>@d.DepositDate.ToLongDateString()</td>
                <td>@(@d.name == "Deposit"? "+" : "-" ) @d.DepositAmount</td>
            </tr>
        }
    </tbody>
</table>



<a href="/home/contributors/" class="btn btn-success">Back to Contributors</a>
